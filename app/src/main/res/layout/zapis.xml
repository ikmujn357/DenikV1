<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <CalendarView
                android:id="@+id/calendarView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/nameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:text="Jméno cesty" />


            <EditText
                android:id="@+id/nameEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:layout_gravity="center"
                android:hint="Jméno cesty"
                android:layout_below="@id/opinionTitle"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:padding="16dp" />

            <TextView
                android:id="@+id/fallsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:text="Počet pádů" />

            <EditText
                android:id="@+id/fallEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:layout_gravity="center"
                android:hint="Počet pádů"
                android:layout_below="@id/opinionTitle"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:padding="16dp" />

            <TextView
                android:id="@+id/styleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:text="Styl přelezu" />

            <Spinner
                android:id="@+id/styleSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:minHeight="48dp" />

            <TextView
                android:id="@+id/difficultyText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:text="Obtížnost" />

            <Spinner
                android:id="@+id/difficultySpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/characterText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:text="Charakter cesty" />

            <Spinner
                android:id="@+id/characterSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/timeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:text="Čas" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/minutesEditText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:hint="Minut"
                    android:inputType="number" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text=":" />

                <EditText
                    android:id="@+id/secondsEditText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:hint="Sekund"
                    android:inputType="number" />


            </LinearLayout>



            <TextView
                android:id="@+id/descriptionTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Popište cestu"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="32dp" />

            <!-- Velké textové pole pro popis cesty -->
            <EditText
                android:id="@+id/descriptionEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:layout_gravity="center"
                android:hint="Napište popis cesty"
                android:layout_below="@id/descriptionTitle"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:padding="16dp" />

            <!-- Text "Popište, proč se vám cesta líbila/nelíbila" -->
            <TextView
                android:id="@+id/opinionTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Popište, proč se vám cesta líbila/nelíbila"
                android:layout_below="@id/descriptionEditText"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp" />

            <!-- Textové pole pro popis názoru na cestu -->
            <EditText
                android:id="@+id/opinionEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:layout_gravity="center"
                android:hint="Napište svůj názor"
                android:layout_below="@id/opinionTitle"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:padding="16dp" />

            <!-- Tlačítko "Uložit" -->
            <Button
                android:id="@+id/saveButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Uložit"
                android:layout_below="@id/opinionEditText"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="32dp" />
        </LinearLayout>


    </RelativeLayout>
</ScrollView>
